            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selection"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"    />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/eau_menu1"
                android:id="@+id/iv_water_menu"
                android:onClick="selectMenu"
                android:layout_marginBottom="10dp"  />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/soda_menu1"
                android:id="@+id/iv_soda_menu"
                android:onClick="selectMenu"
                android:layout_marginBottom="10dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/beer_menu1"
                android:id="@+id/iv_beer_menu"
                android:onClick="selectMenu"
                android:layout_marginBottom="10dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/liqueur_menu1"
                android:id="@+id/iv_liqueur_menu"
                android:onClick="selectMenu"
                android:layout_marginBottom="10dp" />
            <ImageView
                android:id="@+id/iv_gomordi_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gomordi_menu1"
                android:onClick="setFlacon"
                android:layout_marginBottom="10dp" />


        </LinearLayout>
    </ScrollView>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:visibility="invisible"
        android:id="@+id/sv_water_menu"
        >

        <LinearLayout
