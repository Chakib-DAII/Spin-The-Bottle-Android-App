                        android:layout_height="100dp"
                        android:background="@drawable/water1"
                        android:id="@+id/im_water1"
                        android:onClick="setFlacon"
                        />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/water2"
                        android:id="@+id/im_water2"
                        android:onClick="setFlacon"
                        />
                    <ImageView
