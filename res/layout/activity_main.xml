    <RelativeLayout
        android:id="@+id/fl_bottle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_bottle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="StartnReset"
            android:scaleType="centerInside" />


        <LinearLayout
            android:id="@+id/iv_bubble"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/cb_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action"
                android:textSize="15sp"
                android:checked="true"
                android:onClick="onCheckboxClicked"
                android:layout_weight="0.07" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="      ou"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/cb_verite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="veritÃ©"
                android:onClick="onCheckboxClicked"
                android:layout_weight="0.06" />

        </LinearLayout>

            <ImageView
                android:id="@+id/button_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/okbutton"
                android:layout_marginBottom="5dp"
                android:onClick="actVerite"

                />
        </LinearLayout>


        <LinearLayout
        android:id="@+id/iv_act_verite"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/imv_act_verite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/zone_de_texte"
             />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/zone_de_texte"
            />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_act_verite"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            >
                <TextView
                android:id="@+id/tv_text_act_verite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="actionVerite"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:paddingRight="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

